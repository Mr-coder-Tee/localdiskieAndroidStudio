<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">
    <TextView
        android:id="@+id/liveTournamentname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tournament name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_margin="6dp"/>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"
    android:padding="5dp"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/livetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginRight="50dp"
        android:text="playing now"
        android:textColor="#09F801"
        android:textSize="10sp"
        android:layout_gravity="right"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="1"
        android:layout_gravity="center"
        android:layout_margin="10dp">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/liveteam1"
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/userprofile"
            />
        <TextView
            android:id="@+id/liveTeamname1"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="team 1 "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/liveScore1"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/liveScore2"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/liveTeamname2"
            android:layout_rowWeight="1"
            android:layout_column="5"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:text="team 2"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/liveteam2"
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/userprofile"/>
    </GridLayout>
</androidx.cardview.widget.CardView>
