<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:cardElevation="12dp"
    app:cardCornerRadius="15dp"
    android:background="@drawable/backgroudmaker"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/addteam1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/add"
                    android:layout_margin="5dp"/>
                <ImageView
                    android:id="@+id/minteam1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/minimize"
                    android:layout_margin="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/logoteam1"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/userprofile"
                    />
                <TextView
                    android:id="@+id/scoreteam1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="makgofe united"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txtScoreteam1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="10"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text=":"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/txtScoreteam2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="10"
                android:layout_margin="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/logoteam2"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/userprofile"
                    />
                <TextView
                    android:id="@+id/scoreteam2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="makgofe united"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/addteam2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/add"
                    android:layout_margin="5dp"/>
                <ImageView
                    android:id="@+id/minteam2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/minimize"
                    android:layout_margin="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_margin="5dp"
            android:id="@+id/updatescorebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="match started"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>